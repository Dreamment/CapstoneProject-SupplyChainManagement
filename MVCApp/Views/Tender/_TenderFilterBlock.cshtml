@model TenderIndexViewModel

<div>
    <form method="get">
        <div class="mb-3">
            <label class="form-label">Keyword</label>
            <input type="text" class="form-control" name="keyword" placeholder="Search..." value="@Model.TenderFilter.Title">
        </div>
        <div class="mb-3">
            <label class="form-label">Category</label>
            <div>
                @foreach (var category in Model.TenderCategories)
                {
                    <div class="form-check">
                        <input class="form-check-input"
                               type="checkbox"
                               name="categoryIds"
                               value="@category.Id"
                               id="cat_@category.Id"
                               @(Model.TenderFilter.CategoryIds.Contains(category.Id) ? "checked" : "") />
                        <label class="form-check-label" for="cat_@category.Id">
                            @category.Name
                        </label>
                    </div>
                }
            </div>
        </div>
        <div class="mb-3">
            <label class="form-label">Bid Status</label>
            <div>
                @foreach (BidStatus status in Enum.GetValues(typeof(BidStatus)))
                {
                    <div class="form-check">
                        <input class="form-check-input"
                               type="checkbox"
                               name="bidStatuses"
                               value="@( (int)status )"
                               id="bidstatus_@status"
                               @(Model.TenderFilter.BidStatuses.Contains(status) ? "checked" : "") />
                        <label class="form-check-label" for="bidstatus_@status">
                            @status
                        </label>
                    </div>
                }
            </div>
        </div>
        <div class="mb-3">
            <label class="form-label">Tender Status</label>
            <div>
                @foreach (TenderStatus status in Enum.GetValues(typeof(TenderStatus)))
                {
                    <div class="form-check">
                        <input class="form-check-input"
                               type="checkbox"
                               name="tenderStatuses"
                               value="@( (int)status )"
                               id="tenderstatus_@status"
                               @(Model.TenderFilter.TenderStatuses.Contains(status) ? "checked" : "") />
                        <label class="form-check-label" for="tenderstatus_@status">
                            @status
                        </label>
                    </div>
                }
            </div>
        </div>
        <button type="submit" class="btn btn-primary w-100">
            <i class="fa-solid fa-search"></i> Apply
        </button>
    </form>
</div>