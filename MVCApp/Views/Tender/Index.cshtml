@{
    ViewData["Title"] = "Tenders";
}
@model IEnumerable<Tender>

<div class="row">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>Created</th>
                <th>Deadline</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var tender in Model)
            {
                <tr>
                    <td>@tender.TenderID</td>
                    <td>@tender.Title</td>
                    <td>@tender.Description</td>
                    <td>@tender.CreatedAt.ToString("yyyy-MM-dd")</td>
                    <td>@tender.Deadline.ToString("yyyy-MM-dd")</td>
                    <td>@tender.Status</td>
                    <td>
                        <a href="#">
                            <i class="fa-solid fa-person-digging"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>