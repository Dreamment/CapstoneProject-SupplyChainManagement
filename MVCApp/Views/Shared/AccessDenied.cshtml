@{
    ViewData["Title"] = "Access Denied";
}
@model string

@if(Model == "/tender")
{
    <h1 class ="h3 mb-3 text-center">
        You are not supplier. You can not see Tenders.
    </h1>
    <h1 class="h5 mb-3 text-center">
        If you think this is a mistake contact to our company.
    </h1>
}

@{
    // Check if the model matches the pattern "/tender/details/{number}"
    var tenderDetailsPrefix = "/tender/details/";
    bool isTenderDetails = Model != null 
                            && Model.StartsWith(tenderDetailsPrefix)
                            && int.TryParse(Model.Substring(tenderDetailsPrefix.Length), out _);
}

@if (isTenderDetails)
{
    <div class="alert alert-danger text-center" role="alert">
        You are not allowed to view the details of this tender.
    </div>
}

<div class="container text-center mt-5">
    <h1 class="display-4 text-danger">Access Denied</h1>
    <p class="lead">You do not have permission to view this page.</p>
    <a asp-controller="Home" asp-action="Index" class="btn btn-primary mt-3">Go to Home</a>
</div>