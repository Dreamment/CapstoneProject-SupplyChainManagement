@{  
    ViewData["Title"] = "Access Denied";  
}  
@model string  

@{  
    var tenderDetailsPrefix = "/tender/details?tenderId=";
    bool isTenderDetails = Model != null   
                            && Model.StartsWith(tenderDetailsPrefix)  
                            && int.TryParse(Model.Substring(tenderDetailsPrefix.Length), out _);  
    var tenderBidPrefix = "/tender/bid?tenderId=";
    bool isTenderBid = Model != null  
                        && Model.StartsWith(tenderBidPrefix)  
                        && int.TryParse(Model.Substring(tenderBidPrefix.Length), out _);
}  

@if (Model == "/tender")
{
    <h1 class="h3 mb-3 text-center">  
        You are not supplier. You can not see Tenders.<br />
        If you think this is a mistake contact to our company.
    </h1>
}
else if (Model == "NotRegistered")
{
    <h1 class="h3 mb-3 text-center">
        You registered to the system but not approved by our company.<br />
        Contact With us.
    </h1>
}
else if (isTenderDetails)  
{  
    <div class="alert alert-danger text-center" role="alert">  
        You are not allowed to view the details of this tender.  
    </div>  
}  
else if (isTenderBid)  
{  
    <div class="alert alert-danger text-center" role="alert">  
        You are not allowed to bid on this tender.  
    </div>  
}  

<div class="container text-center mt-5">  
    <h1 class="display-4 text-danger">Access Denied</h1>  
    <p class="lead">You do not have permission to view this page.</p>  
    <a asp-controller="Home" asp-action="Index" class="btn btn-primary mt-3">Go to Home</a>  
</div>