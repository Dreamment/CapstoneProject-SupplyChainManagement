<ul class="navbar-nav">  
    @if (User.Identity.IsAuthenticated)
    {  
        <div class="navbar-text fw-semibold me-3">
            <i class="bi bi-person-circle me-1"></i>@User.Identity.Name
        </div>
        <li class="nav-item">  
            <a class="btn btn-outline-primary me-2" asp-area="" asp-controller="Account" asp-action="Logout">Logout</a>  
        </li>  
    }  
    else  
    {  
        <li class="nav-item">  
            <a class="btn btn-outline-primary me-2" asp-area="" asp-controller="Account" asp-action="Login">Login</a>  
        </li>  
        <li class="nav-item">
            <a class="btn btn-primary" asp-area="" asp-controller="Account" asp-action="Register">Register</a>
        </li>  
    }  
</ul>